<div class="box wide">
  <div class="legend">
    <%= t(".legend") %>
  </div>

  <%= form_tag set_new_password_url, { :autocomplete => "off" } do %>
    <%= error_messages_for(@reset_user) %>

    <%= hidden_field_tag "token", params[:token] %>

    <p>
    <%= label_tag :username, t(".username") %>
    <%= @reset_user.username %>
    <br />

    <%= label_tag :password, t(".new_password") %>
    <%= password_field_tag :password, "", :size => 30 %>
    <br />

    <%= label_tag :password_confirmation, t(".new_password_again") %>
    <%= password_field_tag :password_confirmation, "", :size => 30 %>
    <br />

    <p>
    <%= submit_tag t(".set_new_password") %>
    </p>
  <% end %>
</div>
